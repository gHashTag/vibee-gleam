{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.command' | { read cmd; if [[ \"$cmd\" == *\"fly deploy\"* ]]; then \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/e2e-rainbow-bridge.sh; fi; }",
            "timeout": 120000
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(gleam build:*)",
      "Bash(gleam test:*)",
      "Bash(fly deploy:*)",
      "Bash(fly logs:*)",
      "Bash(git:*)"
    ]
  }
}
